{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "installCommand": "python -m venv /app/.venv && . /app/.venv/bin/activate && pip install -r requirements.txt"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "PATH=/nix/var/nix/profiles/default/bin:$PATH /opt/.venv/bin/python main.py",
    "sleepApplication": false,
    "useLegacyStacker": false,
    "multiRegionConfig": {
      "asia-southeast1-eqsg3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
